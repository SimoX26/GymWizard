<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.gui.DashboardAdminController"
            style="-fx-background-color: linear-gradient(to right, #0d0d0d, #1a1a1a);"
            prefWidth="1000" prefHeight="700">

    <!-- TOP: Icone -->
    <top>
        <HBox spacing="25" alignment="CENTER_RIGHT"
              BorderPane.alignment="TOP_RIGHT"
              style="-fx-padding: 20 30 0 0;">
            <Label fx:id="logoutArrow" text="←"
                   style="-fx-font-size: 32px; -fx-text-fill: #f57c00; -fx-cursor: hand;"/>
            <Label fx:id="helpIcon" text="?"
                   style="-fx-font-size: 32px; -fx-text-fill: #f57c00; -fx-cursor: hand;"/>
            <Label fx:id="homeIcon" text="🏠"
                   style="-fx-font-size: 32px; -fx-text-fill: #f57c00; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- LEFT: Menu admin -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER"
              BorderPane.alignment="CENTER_LEFT"
              style="-fx-padding: 40; -fx-border-color: #f57c00; -fx-border-width: 2; -fx-border-radius: 30; -fx-background-radius: 30;">
            <Button text="Nome Admin" maxWidth="200" prefHeight="40"
                    style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-background-radius: 20;"/>

            <Label text="👤"
                   style="-fx-font-size: 80px; -fx-text-fill: #f57c00;" alignment="CENTER"/>

            <Button text="Invia Comunicazione Globale" maxWidth="200" prefHeight="40"
                    style="-fx-background-color: transparent; -fx-border-color: #f57c00; -fx-border-radius: 20; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Visualizza Statistiche" maxWidth="200" prefHeight="40"
                    style="-fx-background-color: transparent; -fx-border-color: #f57c00; -fx-border-radius: 20; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Gestisci Listino Attività" maxWidth="200" prefHeight="40"
                    style="-fx-background-color: transparent; -fx-border-color: #f57c00; -fx-border-radius: 20; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </left>

    <!-- CENTER: Contenuto -->
    <center>
        <VBox spacing="25" alignment="CENTER"
              BorderPane.alignment="CENTER"
              style="-fx-padding: 20;">
            <Label text="GESTISCI LA TUA PALESTRA"
                   style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-family: 'Arial Black';"/>
            <Label text="GESTISCI CON GYMWIZARD"
                   style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-family: 'Arial Black';"/>
            <Label text="🏋️‍♂️"
                   style="-fx-font-size: 100px; -fx-text-fill: white;"/>
            <Label text="GymWizard"
                   style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </center>

</BorderPane>
