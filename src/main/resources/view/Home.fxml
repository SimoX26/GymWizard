<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" style="-fx-background-color: black;"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.gui.HomeController">

   <children>

      <!-- ðŸ“¸ Immagine di sfondo -->
      <ImageView fx:id="backgroundImage"
                 fitWidth="${stackPane.width}"
                 fitHeight="${stackPane.height}"
                 preserveRatio="false"
                 pickOnBounds="true">
         <image>
            <Image url="@../images/Sfondo_home.png"/>
         </image>
      </ImageView>

      <!-- ðŸŒ˜ Vignettatura sfumata nera -->
      <ImageView fitWidth="${stackPane.width}"
                 fitHeight="${stackPane.height}"
                 preserveRatio="false"
                 pickOnBounds="true">
         <image>
            <Image url="@../images/vignette.png"/>
         </image>
      </ImageView>

      <!-- ðŸ”³ Overlay nero per fade -->
      <Rectangle fx:id="fadeOverlay"
                 width="${stackPane.width}"
                 height="${stackPane.height}"
                 fill="black"
                 opacity="0"/>

      <!-- ðŸŸ  Bottone "Accedi" centrato -->
      <VBox alignment="CENTER">
         <children>
            <Button fx:id="loginButton" onAction="#handleLoginButton" text="Accedi" style="
                    -fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22);
                    -fx-text-fill: white;
                    -fx-font-size: 18px;
                    -fx-font-weight: bold;
                    -fx-padding: 10 20;
                    -fx-background-radius: 30;
                    -fx-cursor: hand;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 5, 0.5, 0, 2);
                    -fx-border-color: white;
                    -fx-border-width: 2;
                    -fx-border-radius: 30;
                ">
               <font>
                  <Font name="Arial Black" size="18.0"/>
               </font>
            </Button>
         </children>
      </VBox>

   </children>
</StackPane>
