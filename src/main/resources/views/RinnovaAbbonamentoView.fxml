<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@style.css"  fx:id="anchorPane" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispwproject.gymwizard.controller.gui.RinnovaAbbonamentoGUIController">

     <!-- Benvenuto -->
     <Label styleClass="welcome-label" text="SCEGLI LA TIPOLOGIA DI ABBONAMENTO" AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="40.0"/>

    <!-- Contenitore principale -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="140.0">
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
             <VBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="50.0">
                 <Label text=" 10 ingressi:" styleClass="label-custom" textFill="WHITE"/>
                 <Label text="Mensile:" styleClass="label-custom" textFill="WHITE"/>
                 <Label text="Trimestrale:" styleClass="label-custom" textFill="WHITE"/>
                 <Label text="Annuale:" styleClass="label-custom" textFill="WHITE"/>
             </VBox>
             <VBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="35.0">
                 <Button onAction="#on10IngressiClick" prefHeight="35.0" prefWidth="80.0" styleClass="button-custom" text="25$"/>
                 <Button onAction="#onMensileClick" prefHeight="35.0" prefWidth="80.0" styleClass="button-custom" text=" 50$"/>
                 <Button onAction="#onTrimestraleClick" prefHeight="35.0" prefWidth="80.0" styleClass="button-custom" text="110$"/>
                 <Button onAction="#onAnnualeClick" prefHeight="35.0" prefWidth="80.0" styleClass="button-custom" text="330$"/>
             </VBox>
         </HBox>
    </VBox>

    <!-- Intestazione inferiore -->
    <HBox alignment="CENTER" spacing="40" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="15.0">
        <Button onAction="#onBackClick" style="-fx-text-fill: white; -fx-font-size: 38; -fx-cursor: hand; -fx-background-color: transparent;" text="↩" />
        <Button onAction="#onHelpClick" style="-fx-text-fill: white; -fx-font-size: 38; -fx-cursor: hand; -fx-background-color: transparent;" text="?" />
        <Button onAction="#onHomeClick" style="-fx-text-fill: white; -fx-font-size: 38; -fx-cursor: hand; -fx-background-color: transparent;" text="⌂" />
    </HBox>
</AnchorPane>
