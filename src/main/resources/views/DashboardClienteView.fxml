<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@style.css" fx:id="anchorPane" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispwproject.gymwizard.controller.gui.DashboardClienteGUIController">
    <!-- Pannello principale -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="140.0">
         <Button onAction="#onSchedaBtnClick" prefHeight="50" prefWidth="250" styleClass="button-custom" text="SCHEDA ALLENAMENTO"/>
         <Button onAction="#onAttivitaBtnClick" prefHeight="50" prefWidth="250" styleClass="button-custom" text="PRENOTA ATTIVITÀ"/>
         <Button onAction="#onStatoAbbonamentoBtnClick" prefHeight="50" prefWidth="250" styleClass="button-custom" text="STATO ABBONAMENTO"/>
         <Button onAction="#onChatListBtnClick" prefHeight="50" prefWidth="250" styleClass="button-custom" text="CHAT"/>
         <Button onAction="#onCodiceAccessoBtnClick" prefHeight="50" prefWidth="250" styleClass="button-custom" text="CODICE D'ACCESSO"/>
    </VBox>

    <!-- Messaggio di benvenuto -->
     <Label fx:id="welcomeLabel" alignment="CENTER" style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;" AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="40.0"/>

     <!-- Menu di navigazione -->
     <HBox alignment="CENTER_RIGHT" spacing="40" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="15.0">
         <Button onAction="#onHelpClick" style="-fx-text-fill: white; -fx-font-size: 38; -fx-cursor: hand; -fx-background-color: transparent;" text="?" />
         <Button onAction="#onLogoutClick" style="-fx-text-fill: white; -fx-font-size: 38; -fx-cursor: hand; -fx-background-color: transparent;" text="⌂" />
     </HBox>

</AnchorPane>
