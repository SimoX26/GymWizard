<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@style.css"  fx:id="anchorPane" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispwproject.gymwizard.controller.gui.ListaChatGUIController">

    <VBox alignment="TOP_CENTER" spacing="30" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">

        <!-- Titolo -->
        <Label alignment="CENTER" prefHeight="107.0" prefWidth="218.0" style="-fx-font-family: 'Comic Sans MS'; -fx-font-weight: bold; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 3;" text="LE TUE CHAT" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Messaggio di funzionalità non implementata -->
        <VBox alignment="CENTER" prefHeight="500" prefWidth="1010" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-border-color: white; -fx-border-radius: 15; -fx-background-radius: 15;">
            <Label style="-fx-font-weight: bold;" text=" Funzionalità non ancora implementata " textFill="GREEN">
                <font>
                    <Font name="System Bold Italic" size="22.0" />
                </font>
            </Label>
            <Label text="Stiamo lavorando per attivare questa sezione al più presto!" textFill="white">
                <font>
                    <Font name="System" size="16.0" />
                </font>
            </Label>
        </VBox>

        <!-- ScrollPane disabilitato (placeholder) -->
        <ScrollPane prefHeight="0.0" prefWidth="0.0" visible="false" />
    </VBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Button onAction="#onBackClick" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand; -fx-background-color: transparent;" text="↩" />
        <Button onAction="#onHelpClick" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand; -fx-background-color: transparent;" text="?" />
        <Button onAction="#onHomeClick" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand; -fx-background-color: transparent;" text="⌂" />
    </HBox>
</AnchorPane>
