<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #2E2E2E; -fx-border-color: white; -fx-border-width: 5;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="org.example.boundaries.DashboardAdminBoundary">

    <!-- Benvenuto -->
    <Label fx:id="welcomeLabel"
           text="Benvenuto Nome Admin"
           alignment="CENTER"
           AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30"
           style="-fx-text-fill: white; -fx-background-color: green; -fx-background-radius: 30; -fx-border-color: white; -fx-border-radius: 30; -fx-border-width: 4; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 10 20;" />

    <!-- Icone in alto a destra -->
    <HBox spacing="20" alignment="CENTER_RIGHT"
          AnchorPane.topAnchor="20" AnchorPane.rightAnchor="30">
        <Label fx:id="backIcon" text="↩" style="-fx-text-fill: white; -fx-font-size: 36; -fx-cursor: hand;" />
        <Label fx:id="helpIcon" text="?" style="-fx-text-fill: white; -fx-font-size: 36; -fx-cursor: hand;" />
        <Label fx:id="homeIcon" text="⌂" style="-fx-text-fill: white; -fx-font-size: 36; -fx-cursor: hand;" />
    </HBox>

    <!-- Contenuti centrali -->
    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="140.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <Button fx:id="listinoBtn" text="LISTINO ATTIVITÀ"
                prefWidth="250" prefHeight="50"
                style="-fx-font-family: 'Comic Sans MS'; -fx-font-weight: bold; -fx-background-color: green; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 4; -fx-background-radius: 10; -fx-border-radius: 10;" />

        <Button fx:id="reportBtn" text="REPORT E STATISTICHE"
                prefWidth="250" prefHeight="50"
                style="-fx-font-family: 'Comic Sans MS'; -fx-font-weight: bold; -fx-background-color: green; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 4; -fx-background-radius: 10; -fx-border-radius: 10;" />

        <Button fx:id="comunicazioniBtn" text="INVIA COMUNICAZIONI"
                prefWidth="250" prefHeight="50"
                style="-fx-font-family: 'Comic Sans MS'; -fx-font-weight: bold; -fx-background-color: green; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 4; -fx-background-radius: 10; -fx-border-radius: 10;" />
    </VBox>

</AnchorPane>
