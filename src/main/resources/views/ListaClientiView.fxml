<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane  fx:id="anchorPane" prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #2E2E2E; -fx-border-color: white; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispwproject.gymwizard.controller.gui.ListaClientiGUIController">

    <!-- Sezione principale -->
    <VBox alignment="TOP_CENTER" spacing="30" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">

        <!-- Titolo -->
        <Label text="I TUOI CLIENTI" textFill="WHITE">
         <font>
            <Font name="System Bold" size="28.0" />
         </font></Label>

        <!-- Lista scrollabile -->
        <ScrollPane fitToWidth="true" prefHeight="261.0" prefWidth="830.0" style="-fx-background: black; -fx-border-color: white; -fx-border-width: 3; -fx-background-radius: 10;">
            <content>
                <VBox fx:id="clientListVBox" spacing="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </VBox>

    <!-- Footer fisso -->
    <HBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label fx:id="backIcon" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand;" text="↩" />
        <Label fx:id="helpIcon" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand;" text="?" />
        <Label fx:id="homeIcon" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand;" text="⌂" />
    </HBox>

</AnchorPane>
