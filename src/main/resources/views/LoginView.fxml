<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<AnchorPane stylesheets="@style.css" fx:id="anchorPane" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispwproject.gymwizard.controller.gui.LoginGUIController">

    <!-- Contenuto Login centrato -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <!-- Titolo -->
        <Label styleClass="welcome-label" text="AREA RISERVATA" />

        <!-- Campo Email -->
        <TextField fx:id="emailField" maxWidth="300" styleClass="input-custom" promptText="Email" />

        <!-- Campo Password -->
        <PasswordField fx:id="passwordField" maxWidth="300" styleClass="input-custom" promptText="Password" />

        <!-- Pulsante Login -->
        <Button onAction="#onLoginBtnClick" styleClass="button-custom" text="LOGIN"/>
    </VBox>
</AnchorPane>
