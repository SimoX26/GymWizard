<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="900.0" style="-fx-border-color: white; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.boundaries.HomeBoundary">

   <!-- Contenitore verticale centrato -->
   <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

      <!-- Bottone Accedi -->
      <Button fx:id="loginButton" onAction="#handleLoginButton" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 30; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 30; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 5, 0.5, 0, 2);" text="Accedi">
         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
      </Button>
   </VBox>

</AnchorPane>
