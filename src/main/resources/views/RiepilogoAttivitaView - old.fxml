<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #2E2E2E; -fx-border-color: white; -fx-border-width: 5;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.boundaries.RiepilogoAttivitaBoundary">

    <!-- Intestazione -->
    <HBox spacing="20" alignment="CENTER_RIGHT"
          AnchorPane.topAnchor="20" AnchorPane.rightAnchor="30">
        <Label fx:id="backIcon" text="↩" style="-fx-text-fill: white; -fx-font-size: 30; -fx-cursor: hand;" />
        <Label fx:id="helpIcon" text="?" style="-fx-text-fill: white; -fx-font-size: 30; -fx-cursor: hand;" />
        <Label fx:id="homeIcon" text="⌂" style="-fx-text-fill: white; -fx-font-size: 30; -fx-cursor: hand;" />
    </HBox>

    <!-- Titolo -->
    <Label text="RIEPILOGO ATTIVITÀ"
           alignment="CENTER"
           AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30"
           style="-fx-text-fill: white; -fx-font-size: 30; -fx-font-weight: bold; -fx-background-color: green; -fx-border-color: white; -fx-background-radius: 50; -fx-border-radius: 50; -fx-border-width: 3; -fx-padding: 10 20;" />

    <!-- Box Dettagli Attività -->
    <VBox spacing="15" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="100">
        <Label text="Nome Attività:" style="-fx-text-fill: white;" />
        <Label fx:id="nomeLabel" style="-fx-text-fill: white;" />

        <Label text="Giorno:" style="-fx-text-fill: white;" />
        <Label fx:id="giornoLabel" style="-fx-text-fill: white;" />

        <Label text="Ora:" style="-fx-text-fill: white;" />
        <Label fx:id="oraLabel" style="-fx-text-fill: white;" />

        <Label text="Descrizione:" style="-fx-text-fill: white;" />
        <TextArea fx:id="descrizioneArea" editable="false" wrapText="true"
                  style="-fx-control-inner-background: #1E1E1E; -fx-text-fill: white; -fx-border-color: white;"
                  prefHeight="100" />
    </VBox>

</AnchorPane>
