<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" style="-fx-background-color: #2E2E2E; -fx-border-color: white; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.boundaries.DashboardClienteBoundary">

    <!-- Contenitore principale -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="630.0" spacing="60.0">
         <children>
      
                 <!-- Benvenuto -->
              <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="LISTA ATTIVITÀ">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <ComboBox prefWidth="150.0" promptText="FILTRI" />
         </children>
      </HBox>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="613.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="630.0" spacing="40.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="500.0">
                           <children>
                              <Label text="ATTIVITÀ 1" />
                           </children>
                        </VBox>
                        <Button minHeight="30.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="39.0" style="-fx-background-color: #8BC34A; -fx-background-radius: 20;" text="+" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutY="90.0" prefHeight="90.0" prefWidth="630.0" spacing="40.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="500.0">
                           <children>
                              <Label text="ATTIVITÀ 2" />
                           </children>
                        </VBox>
                        <Button minHeight="30.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="39.0" style="-fx-background-color: #8BC34A; -fx-background-radius: 20;" text="+" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutY="180.0" prefHeight="90.0" prefWidth="630.0" spacing="40.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="500.0">
                           <children>
                              <Label text="ATTIVITÀ 3" />
                           </children>
                        </VBox>
                        <Button minHeight="30.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="39.0" style="-fx-background-color: #8BC34A; -fx-background-radius: 20;" text="+" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
    </VBox>

    <!-- Intestazione inferiore -->
    <HBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label fx:id="backBtn" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand;" text="↩" />
        <Label fx:id="helpBtn" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand;" text="?" />
        <Label fx:id="homeBtn" style="-fx-text-fill: white; -fx-font-size: 40; -fx-cursor: hand;" text="⌂" />
    </HBox>
</AnchorPane>
